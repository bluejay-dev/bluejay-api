extends ../layout

block content
  .container
    if messages.success
      div.text-success
        for success in messages.success
          div= success.msg
    if messages.error
      div.text-danger
        for error in messages.error
          div= error.msg

    h4 Create an account

    form(method='POST')
      label(for='firstName') First
      input(type='text', name='firstName', id='firstName', placeholder='First', autofocus)
      label(for='lastName') Last
      input(type='text', name='lastName', id='lastName', placeholder='Last')
      label(for='email') Email
      input(type='email', name='email', id='email', placeholder='Email')
      label(for='password') Password
      input(type='password', name='password', id='password', placeholder='Password')
      p By signing up, you agree to the <a href="/">Terms of Service</a>.
      button(type='submit') Create an account

      hr

      a(href='/auth/facebook') Sign in with Facebook
      br
      a(href='/auth/google') Sign in with Google
      br

    p Already have an account?
      a(href='/login')
        strong  Log in
