extends layout

block content
  .container
    if messages.success
      div.text-success
        for success in messages.success
          div= success.msg
    if messages.error
      div.text-danger
        for error in messages.error
          div= error.msg

    h3 Contact Form

    form(method='POST')
      label(for='firstName') First
      input(type='text', name='firstName', id='firstName', placeholder='First', autofocus)
      label(for='lastName') Last
      input(type='text', name='lastName', id='lastName', placeholder='Last')
      label(for='email') Email
      input(type='email', name='email', id='email')
      label(for='message') Body
      textarea(name='message', id='message', rows='7')
      br
      button(type='submit') Send
